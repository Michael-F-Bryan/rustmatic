
program = {
    ^"program" ~ ^"end_program" ~ ";"?
}
function_block = {
    ^"function_block" ~ ^"end_function_block" ~ ";"?
}

conditional = {
    ^"if"
}

identifier = {
    ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_")*
}

WHITESPACE = _{ " " | "\t" | NEWLINE }
COMMENT = _{ 
    ( "(*" ~ (!"*)" ~ ANY)* ~ "*)" )  | 
    ( "//" ~ (!NEWLINE ~ ANY)* )
}